# Sets the game name
Game_Name: "This is the game name"
Initial_Scene: "scenes/scene_mushroom.snsc"

#Add the path to all used models
Add_Model: "box", "models/box/Box.obj"
Add_Model: "mushroom boi", "models/mushroom_boy/mushroom_boy2.obj"
Add_Model: "TexBox", "models/box/TexCube.obj"
Add_Model: "Window", "models/window/Window.obj"

#Sets the shaders programs
Add_Shader: "basic light", "shaders/vertex_shaders/MVP_texture_vertex.vert", "shaders/fragment_shaders/BasicLight.frag"
Add_Shader: "lamp shader", "shaders/vertex_shaders/MVP_texture_vertex.vert","shaders/fragment_shaders/lamp.frag"
Add_Shader: "sky box", "shaders/vertex_shaders/SkyBox.vert", "shaders/fragment_shaders/SkyBox.frag"
Add_Shader: "reflections", "shaders/vertex_shaders/MVP_texture_vertex.vert", "shaders/fragment_shaders/BasicLight_wReflections.frag"
Add_Shader: "Window", "shaders/vertex_shaders/MVP_texture_vertex.vert", "shaders/fragment_shaders/Window.frag"
Add_Shader: "Explode", "shaders/vertex_shaders/MVP_texture_vertex.vert", "shaders/geometry_shaders/Exploding.geom" ,"shaders/fragment_shaders/BasicLight.frag"
Add_Shader: "Wavy", "shaders/vertex_shaders/MVP_texture_vertex_Wavy.vert","shaders/fragment_shaders/BasicLight.frag"
Add_Shader: "Inflating", "shaders/vertex_shaders/MVP_texture_vertex_Inflating.vert","shaders/fragment_shaders/BasicLight.frag"
Add_Shader: "Toon", "shaders/vertex_shaders/MVP_texture_vertex_Wavy.vert", "shaders/fragment_shaders/BasicLight_Toon.frag"
Add_Shader: "Instanced", "shaders/vertex_shaders/Instanced.vert", "shaders/fragment_shaders/BasicLight.frag"

#Adds textures
Add_Texture: "cube map1", "textures/skybox1"
Add_Texture: "cube map2", "textures/skybox2"
Add_Texture: "Toon_tex",   "textures/toon_shades.png"
Add_Texture: "Toon_tex2",   "textures/toon_shades2.png"